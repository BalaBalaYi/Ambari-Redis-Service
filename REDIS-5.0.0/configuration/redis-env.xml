<configuration supports_adding_forbidden="true">

    <property>
        <name>redis.download.url</name>
        <value></value>
        <display-name>Redis Download Url</display-name>
        <description>redis package download url. The official download url is: http://download.redis.io/releases/redis-5.0.0.tar.gz</description>
    </property>

    <property>
        <name>redis.user</name>
        <value>redis</value>
        <property-type>USER</property-type>
        <display-name>Redis User</display-name>
        <description>redis unix user</description>
    </property>

    <property>
        <name>redis.group</name>
        <value>redis</value>
        <property-type>GROUP</property-type>
        <display-name>Redis Group</display-name>
        <description>redis unix group</description>
    </property>

    <property>
        <name>redis.base.dir</name>
        <value>/opt/redis</value>
        <display-name>Redis Base Directory</display-name>
        <description>redis base directory</description>
    </property>

    <property>
        <name>pid.file.dir</name>
        <value>/var/run/redis</value>
        <display-name>Redis Pid File Directory</display-name>
        <description>Specifies the path where redis creates the process ID file.</description>
    </property>

    <property>
        <name>log.file.dir</name>
        <value>/var/log/redis</value>
        <display-name>Redis Log File Directory</display-name>
        <description>Specifies the path where redis creates the process ID file.</description>
    </property>


</configuration>